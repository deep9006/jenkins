pipeline{
    agent any

    stages{
        stage("user input"){
            steps{
                script{
                    input message: "Do you want to continue..", ok: "continue"
                }
            }
        }

        stage("user input with parameters"){
            steps{
                script{
                    def useinput: input(
                        id: inputID, message: "provide details"
                        parameters: [
                            string(name: "USERNAME", defaultvalue: "deepak", description: "enter your name")
                            choice(name: "ENV", choices: ["dev", "qa", "prod"], description: "selecct the env")
                        ]
                    )
                }
               echo "user name ${inputID.USERNAME}"
               echo "Environment ${inputID.ENV}"
            }
        }
    }
}
